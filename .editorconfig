root = true

[*]
# Encoding
charset = utf-8

# Newlines
end_of_line = lf
insert_final_newline = true

# Indentation
indent_style = space
indent_size = 4
tab_width = 4

# Line of code
max_line_length = 80
trim_trailing_whitespace = true

[*.js]
max_line_length = 100

[{*.yml, *.yaml, *.json, *.md}]
indent_size = 2
